#!/bin/sh

for i in `ls`; do
    echo i
    if [ -f $i ]; then
       	   case "$i" in 
    	   	 *.gz)  gunzip $i
		        echo "ZIP形式"
    			#ls -lh

			ARG="$i"
			NAME="${ARG%.gz}"
			echo "name: $NAME"

			bzip2 $NAME
			echo "bz2形式"
			#ls -lh 
		        ;;
	         *) ;;    
 	   esac
    fi
done